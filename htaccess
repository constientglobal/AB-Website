<IfModule mod_rewrite.c>
  RewriteEngine On

  # Force HTTPS and www
  RewriteCond %{HTTPS} !=on [OR]
  RewriteCond %{HTTP_HOST} !^www\. [NC]
  RewriteRule ^ https://www.absolutebroking.com%{REQUEST_URI} [L,R=301]

  RewriteBase /

  # Allow files like PDF, images, CSS, JS, fonts
  RewriteCond %{REQUEST_FILENAME} -f
  RewriteRule ^ - [L]

  # Allow directories if they exist
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Redirect everything else to Angular index.html
  RewriteRule ^ index.html [L]
</IfModule>

# For Angular routing fallback
ErrorDocument 404 /index.html


